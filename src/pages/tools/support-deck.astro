---
import Layout from '../../layouts/Layout.astro';
import SupportDeckBuilder from '../../components/tools/SupportDeckBuilder';
---

<Layout title="Support Deck Builder - UmamusumeDB" description="Build optimal support card decks for different training strategies in Uma Musume">
  <div class="container mx-auto px-4 py-8">
    <!-- Breadcrumb Navigation -->
    <nav class="text-sm mb-6">
      <ol class="flex items-center space-x-2">
        <li><a href="/" class="text-uma-primary hover:underline">Home</a></li>
        <li class="text-gray-400">/</li>
        <li><a href="/tools/" class="text-uma-primary hover:underline">Tools</a></li>
        <li class="text-gray-400">/</li>
        <li class="text-gray-600">Support Deck Builder</li>
      </ol>
    </nav>

    <div class="mb-8">
      <h1 class="text-3xl font-bold mb-4">Support Deck Builder</h1>
      <p class="text-gray-600">Create the perfect support card deck for your training strategy. Analyze synergies and optimize your card combinations.</p>
    </div>

    <SupportDeckBuilder client:load />

    <!-- Back to Tools Button -->
    <div class="mt-8">
      <a href="/tools/" class="inline-flex items-center gap-2 px-4 py-2 bg-uma-primary text-white rounded-lg hover:bg-uma-primary/90 transition-colors">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m15 18-6-6 6-6"/></svg>
        Back to Tools
      </a>
    </div>
  </div>
</Layout>