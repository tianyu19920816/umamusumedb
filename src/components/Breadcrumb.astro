---
import { Home, ChevronRight } from 'lucide-react';

export interface BreadcrumbItem {
  label: string;
  href?: string;
}

interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;
---

<nav class="flex items-center gap-2 text-sm mb-6 sm:mb-8" aria-label="Breadcrumb">
  <a
    href="/"
    class="flex items-center gap-1 text-gray-600 hover:text-uma-primary transition-colors"
    aria-label="Home"
  >
    <Home className="w-4 h-4" />
    <span class="hidden sm:inline">Home</span>
  </a>

  {items.map((item, index) => (
    <>
      <ChevronRight className="w-4 h-4 text-gray-400" />
      {item.href ? (
        <a
          href={item.href}
          class="text-gray-600 hover:text-uma-primary transition-colors"
        >
          {item.label}
        </a>
      ) : (
        <span class="text-gray-900 font-medium">{item.label}</span>
      )}
    </>
  ))}
</nav>
